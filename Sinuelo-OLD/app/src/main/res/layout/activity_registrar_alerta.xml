<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".RegistrarAlertaActivity">
  <include layout="@layout/header"></include>
  <ImageView
    android:id="@+id/imageView2"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_margin="8dp"
    android:src="@drawable/icone_alerta"/>
  <TextView
    android:id="@+id/textView2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:fontFamily="@font/roboto_black"
    android:text="REGISTRAR ALERTA"
    android:textAlignment="center"
    android:textColor="#004725"
    android:textSize="30sp"/>

  <TextView
    android:id="@+id/textView4"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:fontFamily="@font/roboto_black"
    android:text="CÓDIGO DO BRINCO:"
    android:textAlignment="textStart"
    android:textColor="#004725"
    android:textSize="14sp"/>

  <TextView
    android:id="@+id/textViewCodigoBrinco"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:fontFamily="@font/roboto_black"
    android:text="NUMERO"
    android:textAlignment="textStart"
    android:textColor="#004725"
    android:textSize="32sp"/>

  <TextView
    android:id="@+id/textView5"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:fontFamily="@font/roboto_black"
    android:text="SELECIONE O TIPO DE ALERTA:"
    android:textAlignment="textStart"
    android:textColor="#004725"
    android:textSize="14sp"/>

  <EditText
    android:id="@+id/editTextAlerta"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_margin="8sp"
    android:background="@drawable/edit_text_with_bg"
    android:ems="10"
    android:inputType="textPersonName"
    android:padding="5dp"
    android:textColor="#004725"
    android:textSize="20sp"
    android:tooltipText="Usuário"
  />

  <Button
    android:id="@+id/btnSalvar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8sp"
    android:background="@drawable/rounded_button_green"
    android:text="SALVAR"
    android:textColor="#ffffff"
    android:textSize="28sp"
    android:textStyle="bold"/>

  <Button
    android:id="@+id/btnCancelar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8sp"
    android:background="@drawable/rounded_button_green"
    android:text="CANCELAR"
    android:textColor="#ffffff"
    android:textSize="28sp"
    android:textStyle="bold"/>
</LinearLayout>