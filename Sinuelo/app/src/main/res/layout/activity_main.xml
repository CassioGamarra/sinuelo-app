<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:background="#004725">
        <ImageView
                android:id="@+id/imageView"
                android:layout_width="134dp"
                android:layout_height="43dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/logo_header"
                tools:srcCompat="@drawable/logo_header"
                app:srcCompat="@drawable/logo_header"/>
    </LinearLayout>
    <Button
            android:background="@drawable/rounded_button"
            android:text="LISTAR ANIMAIS"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:id="@+id/btnListarAnimais"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:fontFamily="@font/roboto_medium" android:textSize="34sp" android:textColor="#FFFFFF"
            android:textStyle="bold" android:typeface="normal" android:textAlignment="viewEnd"
    />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ROTINAS COM ANIMAIS"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:textFontWeight="700"
            android:textColor="#004725" android:fontFamily="@font/roboto_medium" android:textAlignment="viewStart"/>

</LinearLayout>