<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              tools:context=".ConfiguracoesActivity">

  <include layout="@layout/header"></include>

  <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="CONFIGURAÇÕES GERAIS"
    android:textSize="18sp"
    android:layout_margin="8dp"
    android:textFontWeight="700"
    android:textColor="#004725"
    android:fontFamily="@font/roboto_medium"
    android:textAlignment="textStart"/>

  <GridLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:columnCount="3"
    android:layout_gravity="center"
    android:layout_margin="8sp"
  >
    <Button
      android:id="@+id/btnConectarBastao"
      android:layout_width="120dp"
      android:layout_height="120dp"
      android:layout_margin="8sp"
      android:background="@drawable/btn_conectar_bastao"/>
    <Button
      android:id="@+id/btnLigarBluetooth"
      android:layout_width="120dp"
      android:layout_height="120dp"
      android:layout_margin="8sp"
      android:background="@drawable/btn_ligar_bluetooth"/>
    <Button
      android:id="@+id/btnSincronizarApp"
      android:layout_width="120dp"
      android:layout_height="120dp"
      android:layout_margin="8sp"
      android:background="@drawable/btn_sincronizar_aplicativo"/>
  </GridLayout>
</LinearLayout>